---
import Layout from '../layouts/Layout.astro';
import type Project from '../models/Project'
import Tile from '../components/Tile.astro';

const projects:Project[] = [
	{
		title: "a2z",
		route: '/',
		type: 'Mobile/Web App',
		colorClass: 'tile-purple-pink',
		image: {
			srcPath: "/truck-svgrepo-com.svg",
			altText: "truck.svg"
		}
	},
	{
		title: "rAdmin",
		route: '/',
		type: 'Web App',
		colorClass: 'tile-blue-teal',
		image: {
			srcPath: "/restaurant-plate-svgrepo-com.svg",
			altText: "restaurant front.svg"
		}
	}, 
	{
		title: "StockTrace",
		route: '/',
		type: 'Web App',
		colorClass: 'tile-yellow-pink',
		image: {
			srcPath: "/barchart-svgrepo-com.svg",
			altText: "chart.svg"
		}
	}, 
	{
		title: "Github-Personal",
		route: '/',
		type: 'Web App',
		colorClass: 'tile-blue-pink',
		image: {
			srcPath: "/github-svgrepo-com.svg",
			altText: "github.svg"
		}
	}, 
	{
		title: "Animation Library",
		route: '/',
		type: 'CSS/SVG',
		colorClass: 'tile-lightblue-pink',
		image: {
			srcPath: "/gif-svgrepo-com.svg",
			altText: "gif-icon.svg"
		}
	}
]
---

<Layout title="Sam Steinberg">
	<main>
		<div class="main-container">
			<div class="header">
				<h1 class="text-center">Hi, I'm Sam. Welcome to my site.</h1>
				<div class="subheader-container subheader text-center">
					<p>
						I am a full-stack developer based in Austin, TX.
						My portfolio has basic CSS animations to modern web frameworks, and mobile apps.
						Check out my projects by selecting from the tiles.
					</p>
				</div>
			</div>
			<div class="img-container">
				<img src="/astronaut-svgrepo-com.svg" alt="spaceshit.jpg" class="img-dimensions" />
			</div>
		</div>
		<section id="tiles" class="link-card-grid">
			{
				projects.map((project:Project) => <Tile project={project} />)
			}
		</section>
	</main>
</Layout>

<style>
	
	:root {
		--astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	.main-container {
		width:100%;
		color:white;
		background-color: #0f172ae6;
	}

	.img-container {
		display: flex;
		padding: 1rem;
		padding-bottom: 3rem;
		align-items: center;
		justify-content: center;
	}

	.img-dimensions {
		height: auto;
		width: 250px
	}

	.header {
		color: white;
		max-width: 1100px;
    	margin: 0 auto;
		padding: 1rem;
	}

	.subheader-container {
		max-width: 500px;
		margin: 0 auto;
	}

	.subheader {
		color: #94a3b8
	}

	h1 {
		margin-top: 2rem;
		margin-bottom: 0;
	}

	section {
		margin: auto;
		padding: 1em;
		max-width: 1200px;
		padding: 1rem;
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.link-card-grid {
		display: flex;
		flex-wrap: wrap;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	@media screen and (min-width: 500px) {
		.img-dimensions {
			height: auto;
			width: 350px
		}
	}

	@media screen and (min-width: 768px) {
		.subheader-container {
			max-width: 700px;
		}
	}

	@media screen and (min-width: 992px) {
		h1 {
			font-size: 3.5rem !important;
		}
		.img-dimensions {
			height: auto;
			width: 500px
		}
		.main-container {
			min-height: 100vh;
		}
	}
</style>
