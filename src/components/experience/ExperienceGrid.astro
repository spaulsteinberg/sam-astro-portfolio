---
import type ExperienceTimelineElement from "../../models/ExperienceTimelineElement";
import ExperienceTimelineItem from "./ExperienceTimelineItem.astro";

export interface Props {
  timelineItems: ExperienceTimelineElement[];
}

const { timelineItems } = Astro.props;
---

<div class="experience-grid">
  <div class="grid-col ibm-experience-col">
    <ExperienceTimelineItem experience={timelineItems[0]} />
  </div>
  <div class="grid-col schwab-experience-col">
    <ExperienceTimelineItem experience={timelineItems[1]} />
  </div>
  <div class="grid-col school-experience-col">
    <ExperienceTimelineItem experience={timelineItems[2]} />
  </div>
</div>

<style lang="scss">
  @import '../../styles/abstracts.scss';

  .experience-grid {
    display: grid;
    grid-template-rows: repeat(4, 100px);
    grid-template-columns: repeat(4, 1fr);
    row-gap: 10px;
    column-gap: 10px;
    padding: 0 1rem;
  }

  .grid-col {
    @include flex-box(column, nowrap, space-between, start);
    border-radius: 5px;
    width: 100%;
  }

  .school-experience-col {
    grid-row-start: 3;
    grid-column-start: 1;
    grid-column-end: 5;
    background-image: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  .schwab-experience-col {
    grid-row-start: 2;
    grid-column-start: 1;
    grid-column-end: 5;
    background-image: linear-gradient(358.4deg,rgb(249,151,119) -2.1%,rgb(98,58,162) 90%);
  }

  .ibm-experience-col {
    grid-row-start: 1;
    grid-column-start: 1;
    grid-column-end: 5;
    background-image: linear-gradient(160deg, #0093e9 0%, #80d0c7 100%);
  }

  @media screen and (min-width: 280px) {
    .grid-col {
      @include flex-box(row, nowrap, space-between, center);
      border-radius: 5px;
      width: 100%;
    }
  }

  @media screen and (min-width: screen("lg")) {
    .experience-grid {
      grid-template-columns: repeat(9, 1fr);
    }

    .school-experience-col {
      grid-column-start: 1;
      grid-column-end: 3;
    }

    .schwab-experience-col {
      grid-column-start: 3;
      grid-column-end: 7;
    }

    .ibm-experience-col {
      grid-column-start: 7;
      grid-column-end: 10;
    }
  }
</style>
