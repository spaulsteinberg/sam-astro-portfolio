---
export interface Props {
  route:string;
  title:string;
  target?:string;
  textColor?:string;
  borderColor?:string;
}

const { route, title, target = "_blank", textColor = "#fff", borderColor = "#4f39fa", } = Astro.props
---

<a href={route} target={target} rel="noreferrer">
  <button class="button">
    {title}
  </button>
</a>

<style lang="scss" define:vars={{ textColor, borderColor }}>
    .button {
      border-radius: 5px;
      padding: .25rem 1rem;
      background-color: transparent;
      color: var(--textColor);
      border: 1px solid var(--borderColor);
    }
</style>