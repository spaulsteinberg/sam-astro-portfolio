---
import type Project from '../models/Project';

export interface Props {
	project:Project
}

const { project: { title, route, type, colorClass} } = Astro.props;
---

<div class={`link-tile ${colorClass}`}>
	<a href={route}>
		<p>
			{type}
		</p>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
	</a>
</div>
<style>

	.link-tile {
		display: flex;
        flex-direction: column;
		padding: 0.15rem;
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		margin-top: 2rem;
        height: 400px;
        width: 99%;
	}

	.tile-purple-pink {
		background-image: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	.tile-blue-teal {
		background-color: #0093E9;
		background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
	}

	.tile-yellow-pink {
		background-image: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	.tile-blue-pink {
		background-color: #00DBDE;
		background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);
	}

	.tile-lightblue-pink {
		background-color: #A9C9FF;
		background-image: linear-gradient(180deg, #A9C9FF 0%, #FFBBEC 100%);
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	.link-tile:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-tile:is(:hover, :focus-within) h2 {
		color: #4f39fa;
	}

	.link-tile:is(:hover, :focus-within) h2 span {
		will-change: transform;
		transform: translateX(2px);
	}

    @media screen and (min-width: 768px) {
		.link-tile {
            width: 70%;
            height: 500px
	    }
	}
</style>
