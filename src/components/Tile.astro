---
export interface Props {
	title: string;
	type: string;
	route: string;
}

const { title, type, route } = Astro.props;
---

<div class="link-tile">
	<a href={route}>
		<p>
			{type}
		</p>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
	</a>
</div>
<style>

	.link-tile {
		display: flex;
        flex-direction: column;
		padding: 0.15rem;
		background-image: linear-gradient(0deg, #4f39fa, #da62c4);;
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		margin-top: 2rem;
        height: 400px;
        width: 100%;
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	.link-tile:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-tile:is(:hover, :focus-within) h2 {
		color: #4f39fa;
	}

	.link-tile:is(:hover, :focus-within) h2 span {
		will-change: transform;
		transform: translateX(2px);
	}

    @media screen and (min-width: 768px) {
		.link-tile {
            width: 70%;
            height: 500px
	    }
	}
</style>
